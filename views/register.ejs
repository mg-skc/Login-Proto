<h1>Register for Waste Not</h1>
<form action= /register method="POST">
    <div>
        <label for="name">Name</label>
        <input type='text' id='name' name='name' required>
    </div>
    <div>
        <label for="email">Email Address</label>
        <input type='email' id='email' name='email' required>
    </div>
    <div>
        <label for="password">Password</label>
        <input type='password' id='password' name='password' pattern=".{6,}"   required title="6 characters minimum" required>
    </div>
    <div>
        <label for="phone">Phone</label>
        <input type='phone' id='phone' name='phone' required title="9 digits minimum" required>
    </div>
    <button type="submit">Register</button>
</form>

<a href="/login">Go To Login</a>